    <style name="logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainMenu">
        <!--<item name="android:background">#ff10044d</item>-->
        <!--<item name="android:textColor">#ffffffff</item>-->
    </style>

    <style name="MainMenuItem" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="Buttons">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="menuText" parent="@android:style/TextAppearance.Medium.Inverse"/>

    <style name="Ids" parent="Theme.AppCompat.Light">
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

      <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="contentInsetStart">4dp</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light">
        <!--<item name="android:windowNoTitle">false</item>-->
    </style>

    <declare-styleable name="ButtonMenu">
        <attr name="itemHeight" format="dimension"/>
        <attr name="fontSize" format="dimension"/>
    </declare-styleable>

    <style name="ActionButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingEnd">0dip</item>
    </style>

    <style name="DialogTheme" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_panel</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorButtonNormal">@color/app_panel</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="buttonStyle">@style/DialogButton</item>
</style>

<style name="DialogButton" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textColor">@color/app_panel</item>
    <item name="android:textSize">17sp</item>
</style>

    <style name="ProgressBarTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/app_panel</item>
    </style>
</resources>