<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <layer-list>
            <item android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp">
                <shape android:shape="oval">
                    <corners android:radius="3dip" />
                    <stroke android:width="1dip" android:color="#AAAAAA" />
                    <solid android:color="#99FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp">
                <shape android:shape="oval">
                    <corners android:radius="3dip" />
                    <stroke android:width="1dip" android:color="#DDDDDD" />
                    <solid android:color="#AAFFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp">
                <shape android:shape="oval">
                    <corners android:radius="3dip" />
                    <stroke android:width="1dip" android:color="#999999" />
                    <solid android:color="#66FFFFFF" />
                </shape>

            </item>
        </layer-list>

    </item>
</selector>