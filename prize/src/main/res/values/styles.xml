<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.MyOfficeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Field_Numbers" parent="android:Theme.Material">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/border_field_numbers</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">25sp</item>
        <item name="android:maxLength">4</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/x</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#666666</item>
    </style>

    <style name="DialogTheme" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="buttonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="UserData" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Error">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">25sp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:background">@drawable/border_button</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
