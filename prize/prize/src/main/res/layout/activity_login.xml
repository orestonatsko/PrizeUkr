<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/treasure_chest_temp" />

        <LinearLayout
            android:id="@+id/tel_entrance_fields"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:paddingEnd="18dp"
            android:visibility="gone"
            android:paddingStart="18dp">

            <EditText
                android:id="@+id/et_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_field_entrance"
                android:hint="Тел"
                android:inputType="number"
                android:padding="4dp"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_field_entrance"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textSize="25sp" />

        </LinearLayout>

        <ua.com.info.prize.NumberFields
            android:id="@+id/card_entrance_fields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_change_entrance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вхід з допомогою пароля"
                android:clickable="true"
                android:textColor="@color/light_blue"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/border_button"
                android:padding="12dp"
                android:text="Відкрити"
                android:enabled="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


</FrameLayout>